<%# Config %>
<% exercises = [] %>
<% exercise.exercises.each do |exe| %>
  <% exercises.push(fetch_exercise exe) %>
<% end %>
<%# End %>
<article data-value="single" class="function-cb duration1 property-all o0 transform-tYm4 cf pv2 ph1 <% if e != el %>bb b--light-gray<% end %>">
  <div class="fl w-10">
    <h1 class="ma0 roboto f1_125 fw5 black"><%= c %></h1>
  </div>
  <header class="fl w-90" style="margin-bottom: 1.5rem;">
    <div class="cf" style="margin-bottom: 0.25rem;">
      <h1 class="fl ma0 roboto f1_125 fw5 black"><%= exercise.name %></h1>
      <h1 class="fr ma0 roboto f1_125 fw5 black"><%= exercise.rounds %></h1>
    </div>
    <div class="cf">
      <h3 class="fl ma0 roboto f1 fw5 dark-gray"><%= exercise.target %> Exercises</h3>
    </div>
  </header>
  <div class="cf">
    <div class="fl w-10" style="height: 1px;"></div>
    <div class="fl w-90">
      <%# Config %>
      <% el = exercises.length - 1 %>
      <%# End %>
      <% exercises.each_with_index do |exe, x| %>
        <div class="w-100 cf <% if x != el %>mb1<% end %>">
          <a class="fl db ma0 roboto f1_125 fw5 black" href="<%= exe.source %>" target="_blank"><%= exe.name %></a>
          <p class="fr ma0 roboto f1_125 fw5 dark-gray"><%= exercise.duration %></p>
        </div>
      <% end %>
    </div>
  </div>
</article>
