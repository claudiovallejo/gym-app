<%# Config %>
<% if week.title === "This Week" %>
  <% href = "/" %>
<% else %>
  <% href = "/#{week.title.parameterize}" %>
<% end %>
<%# End %>
<nav class="fixed z-1 top-0 right-0 left-0 w-100 cf ma0 pv1 bg-white bb b--light-gray">
  <div class="fl w-10 pl1">
    <a href="<%= href %>"><%= image_tag "arrow.svg", :class => "pt4x" %></a>
  </div>
  <div class="fl w-80 ph1">
    <h1 class="fl ma0 roboto fw5 f1_125 black"><%= routine.name %></h1>
  </div>
  <div class="fl w-10 pr1">
    <img data-component="menu" class="fr c-pointer" src="/images/menu.svg">
  </div>
</nav>
