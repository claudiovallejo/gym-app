<%# Config %>
<% week = locals[:week] %>
<% rl = week.routines.length - 1 %>
<%# End %>
<%# Component: Navigation %>
<%= partial "partials/navigation/menu" %>
<%# Component: Header %>
<%= partial("partials/navigation/list", :locals => { :title => week.title }) %>
<main class="mt-53x">
  <% week.routines.each_with_index do |routine, r| %>
    <%# Component: Routine %>
    <%= partial("partials/content/routine", :locals => { :r => r, :rl => rl, :week => week, :routine => routine }) %>
  <% end %>
</main>
